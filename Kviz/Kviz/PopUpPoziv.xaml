        <Button Text="Pozovi prijatelja" HorizontalOptions="Center" Margin="0,40,0,0" FontSize="Large" Clicked="Button_Clicked_1" BorderColor="Black" CornerRadius="40" BackgroundColor="DarkBlue" HeightRequest="80" TextColor="White"/>
